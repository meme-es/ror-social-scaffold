<section class="users-section">
  <ul class="users-list">
    <% @users.each do |user| %>
      <li>
        Name: <%= user.name %>
        <span class="profile-link">
          <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>

          <% unless current_user == user %>
            <% disabled_c = (@pendings.include?(user) || @friends.include?(user))  ? 'profile-link disable' : 'profile-link' %>
            | <%= link_to 'Invite to friendship',  friendships_path(friend_id: user.id), method: :post, class: disabled_c %>
          <% end %>

          <% if @requests.include?(user) %>
            |
            <%= link_to 'Accept Invitation',  confirm_friendship_path(friend_id: user.id), method: :get, class: 'profile-link' %>
            |<%= link_to 'Reject Invitation',  reject_friendship_path(friend_id: user.id), method: :get, class: 'profile-link' %>
          <% end %>
        </span>
      </li>
    <% end %>
  </ul>
</section>
